{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
    "@app/types": ["../../types/*"]
    },
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "baseUrl": ".",
      "paths": {
        "@app/types": ["../../types/"]
      },
    },
    "esm": true
  },
  "include": [
    "src"
  ]
}
